            display: flex;

            align-items: center;
        }

        h3 {
            font-family: HelveticaNeue45;
        }

        a {
            text-decoration: none;
            color: #FFFFFF;
        }

        a, button {  
            cursor: pointer;
        }

        button, input, select {
            background: transparent;
            border: none;

            outline: 0;
        }

        li {
            list-style: none;
        }

        #home-page-header {
            justify-content: space-between;

            padding: 1% 5%;

            position: fixed;
            top: 0;
            width: 100%;

            z-index: 1;
        }

        #home-page-header, #home-page-header * {
            display: flex;

            align-items: center;

            color: #FFFFFF;
        }

            .home-page-header-aside {
                white-space: nowrap;

                font-size: 0.8rem;
            }
            .home-page-header-aside#left > * {
                margin-right: 2rem;
            }

            .home-page-header-aside#right > * {
                margin-left: 2rem;
            }

            .home-page-header-aside svg {
                height: 1rem;
            }

            #home-page-header-logo {
                font-size: 30px;
            }

        main {
            width: 100%;
        }

            #bag {
                width: 40%;
                margin: 0 auto;

                padding-top: 80px;
            }

                #bag header {
                    display: flex;

                    align-items: center;

                    padding: 10px 0;

                    border-bottom: 2px solid black;
                }

                    #bag header span {
                        margin-left: 3%;
                    }

                .bag-item {
                    padding: 5% 0;

                    border-bottom: 2px solid black;
                }

                    .bag-item > div {
                        display: flex;
                    }

                    #bag-item-photo {
                        height: 200px;
                        width: 160px;

                        margin-right: 3%;

                        background: red;
                    }

                    #bag-item-info {
                        display: flex;
                        flex-direction: column;

                        width: 100%;
                    }

                        #bag-item-info h4 {
                            margin-top: 10px;
                        }

                        #bag-item-attributes {
                            margin: 10px 0;
                        }

                            #bag-item-attributes p {
                                margin: 2% 0;
                            }

                    #bag-item-remove {
                        display: flex;

                        justify-content: flex-end;

                        padding: 20px 0;
                    }

                        #bag-item-remove button {
                            display: flex;

                            align-items: center;
                        }

                        #bag-item-remove button svg {
                            height: 20px;
                            width: 20px;

                            margin-right: 10px;
                        }

                    #bag-checkout {
                        display: flex;
                        flex-direction: column;

                        justify-content: center;
                        align-items: center;

                        padding: 5%;
                    }

                        #bag-checkout button {
                            padding: 15px;

                            background: #000F08;

                            margin-top: 15px;
                        }



        footer {
            display: flex;
            flex-direction: column;

            height: 70vh;

            padding: 5%;
        }

            footer h3 {
                font-family: HelveticaNeue55;

                letter-spacing: 0.04em;
            }

            #sign-up-updates-field {
                display: flex;
                flex-direction: column;

                width: 100%;

                justify-content: center;
                align-items: center;
            }

                #sign-up-updates-field p {
                    line-height: 3rem;
                }

                #sign-up-updates-input-field {
                    display: flex;

                    width: 50%;

                    margin-top: 3%;

                    border-bottom: 2px solid #D8D8D8;
                }

                    #sign-up-updates-input-field > * {
                        height: 30px;

                        font-size: 1rem;
                    }

                    #sign-up-updates-input-field input {
                        width: 90%;

                        color: #8C8C8C;
                    }

                    #sign-up-updates-input-field button {
                        width: 10%;

                        letter-spacing: 0.04em;

                        font-weight: 600;

                        color: #000F08;
                    }

            #footer-info {
                display: flex;

                height: 100%;

                padding-top: 5%;

                justify-content: space-around;
            }

                #footer-info ul > * {
                    text-align: left;

                    margin: 15px 0;
                }

                #footer-info li, #footer-info li a {
                    color: #000F08;
                }

                #footer-info li a {
