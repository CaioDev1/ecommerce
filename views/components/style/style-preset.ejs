<style>
    @font-face {
        font-family: HelveticaNeue75;
        src: url(fonts/helvetica-neue-lt-std-75-bold.otf);
    }

    @font-face {
        font-family: HelveticaNeue63;
        src: url(fonts/helvetica-neue-lt-std-63-medium-extended.otf);
    }

    @font-face {
        font-family: HelveticaNeue55;
        src: url(fonts/helvetica-neue-lt-std-55-roman.otf);
    }

    @font-face {
        font-family: HelveticaNeue45;
        src: url(fonts/helvetica-neue-lt-std-45-light.otf);
    }

    input,
    textarea,
    button,
    select,
    h3,
    a {
        -webkit-tap-highlight-color: rgba(0,0,0,0);
    }

    html {
        scroll-behavior: smooth;
    }

    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    body {
        min-height: 100vh;

        font-family: HelveticaNeue45;

        position: relative;
    }

    h1, h2, h5, h6 {
        font-family: HelveticaNeue63;

        display: flex;

        align-items: center;
    }

    h3, h4 {
        font-family: HelveticaNeue45;
    }

    a {
        text-decoration: none;
        color: #FFFFFF;
    }

    a, button {  
        cursor: pointer;
    }

    button, input {
        background: transparent;
        border: none;

        outline: 0;

        border-radius: 0;
    }

    fieldset {
        border: 0;
    }

    select {
        border: none;

        outline: 0;

        cursor: pointer;
    }

    li {
        list-style: none;
    }

    section {
        width: 100%;
        height: 100vh;

        position: relative;

        background-position: center center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    div {
        background-size: 100%;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .slick-list, .slick-track, .slick-track img {
        height: 100%;
        width: 100%;

        object-fit: cover;
    }

    .slick-prev {
        left: 0px;
    }

    .slick-next {
        right: 30px;
    }

    .slick-prev, .slick-next {
        position: absolute;

        z-index: 1;
    }

    .slick-prev::before, .slick-next::before {
        font-size: 50px;
    }

    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    .wishlist-add.added svg * {
        fill: red;
    }

    @media screen and (max-width: 800px) {
        .toggleable {
            max-height: 0;

            overflow: hidden;

            transition: max-height 0.5s ease-in-out;
        }

        .toggleable.active {
            max-height: 1200px;
        }
    }
</style>